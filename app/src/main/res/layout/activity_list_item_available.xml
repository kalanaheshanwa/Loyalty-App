<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@drawable/background4"
    android:id="@+id/linearlayoutAvalible">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">


                <RelativeLayout
                    android:layout_width="293dp"
                    android:layout_height="114dp"
                    android:layout_marginTop="14dp"
                    android:background="#03A9F4">

                    <TextView
                        android:id="@+id/tvItemAv"
                        android:layout_width="match_parent"
                        android:layout_height="74dp"
                        android:layout_above="@+id/tvPresentAv"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:gravity="center_horizontal"
                        android:text="Item"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDetailAv"
                        style="@style/Base.AlertDialog.AppCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tvPresentAv"
                        android:layout_alignStart="@+id/tvPresentAv"
                        android:layout_centerVertical="true"
                        android:text="Detail"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/textView10"
                        style="@style/Base.AlertDialog.AppCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tvDetailAv"
                        android:layout_alignBottom="@+id/tvDetailAv"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="14dp"
                        android:layout_marginStart="14dp"
                        android:text="Detail :"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tvPresentAv"
                        style="@style/Base.AlertDialog.AppCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="16dp"
                        android:text="percentage"
                        android:textColor="#FFFFFF" />

                    <TextView
                        style="@style/Base.AlertDialog.AppCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView10"
                        android:layout_alignStart="@+id/textView10"
                        android:layout_below="@+id/tvItemAv"
                        android:text="percentage :"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvStartAv"
                style="@style/Base.AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:text="Start Date" />

            <TextView
                android:id="@+id/tvEndAv"
                style="@style/Base.AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="End Date" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to :"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/tvEndAv"
                android:layout_toStartOf="@+id/tvEndAv"
                android:layout_marginRight="36dp"
                android:layout_marginEnd="36dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="From :" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>